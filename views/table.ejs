<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <style>
            .input_btn{
                background-color: rgb(205, 225, 255);
                margin: 5px;
                padding: 8px 20px;
                font-weight: bold;
                border-radius: 5px;
            }
            form{
                width: 270px;
                margin: 0 500px;
                padding: 30px;
                text-align: center;
                font-weight: bolder;
                border: 1px solid black;
            }
            </style>
    </head>
    <body>
        
        <form method="post" action="/addcontact"  style="text-align: center;">
    
            Name: <input type="text" name="name" id="" > <br><br>
            contact: <input type="text" name="contact" id="" > <br><br>
            <input type="submit" name="submit" value="add" class="input_btn">
        </form> <br>


        <table border style="margin: auto; width: 20%; text-align: center; margin-top: 30px;">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>contact</th>
                 <th>Delete</th>
                 <th>update</th>
        
            </tr>

            <% result.forEach(function(user){ %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.contact %></td>
                <td><a href="/delete/<%= user.id %>">Delete</a></td>
                <td><a href="/up/<%= user.id %>">edit</a></td>
            </tr>
            <% })%>
        </table>
    </body>
</html>